<h1>Add a New Cohort</h1>

<%= form_for @cohort do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true%>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date, required: true%>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date, required: true%>
  </div>

  <div>
    <%= f.submit %>
  </div>
  <% end %>