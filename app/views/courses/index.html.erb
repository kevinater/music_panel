<div class="container">
    <h1>Course List</h1>


    <%=button_to "Add Course", new_course_path, method: "get"%>
    <table class="table table-striped">
    <thead>
        <th>Course Name</th>
        <th>Credit Hours</th>
    </thead>
    <% @courses.each do |course| %>
    <tr>
        <td> <%=link_to(course) do %>
             <%=course.course_name %>
             <% end %>
        </td>
        <td> <%=course.hours %></td>
        <td>
            <%=link_to "Edit", edit_course_path(course) %>
            </td>
            <td>
            <%=link_to "Delete", course, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>

    </tr>
    <% end %>
    </table>
