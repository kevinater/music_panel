<h1>Add a New Course</h1>

<%= form_for @course do |f| %>
  <div>
    <%= f.label :course_name %>
    <%= f.text_field :course_name, required: true%>
  </div>

  <div>
    <%= f.label :hours %>
    <%= f.number_field :hours, min: 0, max: 20 %>
  </div>

  <div>
    <%= f.submit %>
  </div>
  <% end %>

