<h1>Add a New Student</h1>

<%= form_for @student do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :age %>
    <%= f.number_field :age, max: 150, min: 0 %>
  </div>
  <div>
    <%= f.label :education %>
    <%= f.select :education, Student.educations.keys %>
  </div>

  <div>
    <%= f.submit %>
  </div>
  <% end %>
